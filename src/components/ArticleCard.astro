---
import type { Herramienta } from "../types";
const { herramienta } = Astro.props;
---

<div
    class="bg-gray-800 rounded-xl p-6 shadow hover:shadow-lg transition flex flex-col gap-2"
>
    <div class="flex items-center gap-3 mb-2">
        <span class="text-2xl">{herramienta.logo}</span>
        <h2 class="font-bold text-lg text-white">{herramienta.nombre}</h2>
    </div>
    <p class="text-gray-300 text-sm mb-2">{herramienta.descripcion}</p>
    <div class="flex flex-wrap gap-2">
        {
            herramienta.tags.map((tag: string) => (
                <span class="bg-gray-700 text-gray-300 px-2 py-1 rounded text-xs">
                    {tag}
                </span>
            ))
        }
    </div>
</div>
