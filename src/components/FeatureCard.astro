---
interface Props {
    icon: any;
    iconColor?: string;
    title: string;
    description: string;
    bgColor?: string;
    textColor?: string;
}
const {
    icon,
    iconColor = "text-indigo-400",
    title,
    description,
    bgColor = "bg-gray-900",
    textColor = "text-white",
} = Astro.props as Props;
---

<div class={`rounded-xl p-6 ${bgColor}`}>
    <div class="flex items-start gap-3">
        <span class={`${iconColor} text-xl`}>{icon}</span>
        <div>
            <h3 class={`font-semibold ${textColor}`}>{title}</h3>
            <p class="text-gray-400 text-sm">{description}</p>
            <slot name="extra" />
        </div>
    </div>
</div>
