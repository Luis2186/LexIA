---
const { stats } = Astro.props;
---

<section class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12">
    {
        stats.map((stat: any) => (
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-all duration-300 hover:scale-105">
                <div class="text-3xl mb-2">{stat.icon}</div>
                <div class="text-2xl md:text-3xl font-bold text-blue-400 mb-1">
                    {stat.number}
                </div>
                <div class="text-gray-400 text-sm">{stat.label}</div>
            </div>
        ))
    }
</section>
