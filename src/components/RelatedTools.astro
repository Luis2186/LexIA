---
export interface RelatedTool {
  name: string;
  href: string;
  category: string;
  description: string;
  icon: string;
}

export interface Props {
  tools: RelatedTool[];
  currentTool: string;
}

const { tools, currentTool } = Astro.props;
const relatedTools = tools.filter(tool => tool.name !== currentTool);
---

{relatedTools.length > 0 && (
  <section class="bg-gray-900/50 border-t border-gray-800 py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-white mb-8 text-center">
        ðŸ”— Herramientas Relacionadas
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {relatedTools.slice(0, 3).map((tool) => (
          <a 
            href={tool.href}
            class="bg-gray-800/50 hover:bg-gray-700/50 border border-gray-700/50 hover:border-gray-600/50 rounded-xl p-6 transition-all duration-300 hover:scale-105 hover:shadow-lg group"
          >
            <div class="flex items-start space-x-4">
              <div class="text-3xl">{tool.icon}</div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-white group-hover:text-blue-400 transition-colors">
                  {tool.name}
                </h3>
                <p class="text-sm text-gray-400 mb-2">{tool.category}</p>
                <p class="text-sm text-gray-300">{tool.description}</p>
              </div>
            </div>
            
            <div class="mt-4 flex items-center text-blue-400 text-sm font-medium">
              Ver detalles
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>
      
      <div class="text-center mt-8">
        <a 
          href="/herramientas-ia" 
          class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors"
        >
          Ver todas las herramientas
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </section>
)}
