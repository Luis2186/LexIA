from kfp.v2.dsl import component

@component
def extract_features(
    project_id: str,
    dataset_id: str
) -> dsl.Output[dsl.Dataset]:
    """Extract features from BigQuery"""
    from google.cloud import bigquery
    
    client = bigquery.Client(project=project_id)
    query = f"""
    SELECT 
        user_id,
        item_id,
        rating,
        timestamp,
        user_features,
        item_features
    FROM \`{project_id}.{dataset_id}.interactions\`
    WHERE timestamp >= TIMESTAMP_SUB(CURRENT_TIMESTAMP(), INTERVAL 30 DAY)
    """
    
    df = client.query(query).to_dataframe()
    return df

@dsl.pipeline(
    name="recommendation-pipeline",
    description="End-to-end recommendation system"
)
def recommendation_pipeline(
    project_id: str = "my-project",
    dataset_id: str = "recommendations"
):
    # Step 1: Extract features
    features = extract_features(project_id, dataset_id)
    
    # Step 2: Train AutoML model
