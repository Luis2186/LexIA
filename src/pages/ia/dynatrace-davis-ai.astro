                    >
                    <a
                        href="#capacidades"
                        class="text-gray-400 hover:text-purple-300 whitespace-nowrap transition-colors"
                        >Capacidades</a
                    >
                    <a
                        href="#casos-uso"
                        class="text-gray-400 hover:text-purple-300 whitespace-nowrap transition-colors"
                        >Casos de Uso</a
                    >
                    <a
                        href="#ejemplos"
                        class="text-gray-400 hover:text-purple-300 whitespace-nowrap transition-colors"
                        >Ejemplos</a
                    >
                    <a
                        href="#beneficios"
                        class="text-gray-400 hover:text-purple-300 whitespace-nowrap transition-colors"
