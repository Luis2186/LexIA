            <!-- Ejemplos Prácticos -->
            <section id="ejemplos" class="mb-20">
                <h2 class="text-3xl font-bold text-white mb-8">
                    💡 Casos de Uso Reales
                </h2>

                <div class="space-y-8">
                    <div
                        class="bg-gray-900 rounded-xl p-8 border border-violet-500/20"
                    >
                        <h3 class="text-xl font-semibold text-white mb-6">
                            📱 Mobile App Mockup from Sketch
                        </h3>

                        <div class="grid md:grid-cols-2 gap-8">
                            <div>
                                <div class="bg-gray-800 rounded-lg p-4 mb-4">
                                    <div
                                        class="font-semibold text-violet-300 mb-2"
                                    >
