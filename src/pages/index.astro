---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection.astro";
import HeroCTA from "../components/HeroCTA.astro";
import StatsGrid from "../components/StatsGrid.astro";
import SectionsGrid from "../components/SectionsGrid.astro";
import FinalCTA from "../components/FinalCTA.astro";
import { sections } from "../data/sections";
import { stats } from "../data/stats";
---

<Layout title="LexIA - IA Aplicada al Desarrollo de Software">
    <HeroSection
        title="LexIA"
        subtitle="Desarrollo con IA"
        description='<span class="text-blue-400 font-semibold">Guía Didáctica Completa:</span> Aprende cómo la Inteligencia Artificial revoluciona cada <span class="text-cyan-400 font-semibold">etapa del ciclo</span> de desarrollo de software moderno.'
    >
        <StatsGrid slot="stats" stats={stats} />
        <HeroCTA
            slot="cta"
            ctaLinks={[
                {
                    href: "#sections",
                    class: "bg-gradient-to-r from-blue-500 to-cyan-500 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:from-blue-600 hover:to-cyan-600 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-blue-500/25 flex items-center gap-2",
                    label: "Explorar Capas",
                    icon: true,
                },
                {
                    href: "/docs/AI_IN_SOFTWARE_DEVELOPMENT",
                    class: "bg-white/10 backdrop-blur-sm border border-white/20 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:bg-white/20 transition-all duration-300 transform hover:scale-105",
                    label: "Ver Documentación",
                },
            ]}
        />
        <div
            slot="scroll-indicator"
            class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
        >
            <svg
                class="w-6 h-6 text-blue-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
    </HeroSection>
    <SectionsGrid sections={sections} />
    <FinalCTA
        title="¿Listo para transformar tu desarrollo con IA?"
        description="Comienza implementando IA en tu proyecto y ve resultados inmediatos en productividad y calidad."
        ctaLinks={[
            {
                href: "/herramientas-ia",
                class: "bg-gradient-to-r from-violet-500 to-purple-500 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:from-violet-600 hover:to-purple-600 transition-all duration-300 transform hover:scale-105",
                label: "Explorar Herramientas IA",
            },
            {
                href: "/docs/AI_IN_SOFTWARE_DEVELOPMENT",
                class: "border border-gray-600 text-gray-300 px-8 py-4 rounded-xl text-lg font-semibold hover:border-gray-500 hover:text-white transition-all duration-300",
                label: "Ver Documentación Completa",
            },
        ]}
    />
</Layout>
